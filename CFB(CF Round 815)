#include<bits/stdc++.h>
using namespace std;
#define int long long int
void sum(){
    int n;
    cin>>n;
    int a[n];
    for(int i=0;i<n;i++){
        cin>>a[i];
    }
    sort(a,a+n);
    int a1=a[0];
    int a2=a[1];
    int a3=a[n-2];
    int a4=a[n-1];
    cout<<a4+a3-a2-a1<<endl;
     
    }
    int32_t main(){
        int tc;
        cin>>tc;
        for(int i=0;i<tc;i++){
            sum();
        }
    
 return 0;
}
