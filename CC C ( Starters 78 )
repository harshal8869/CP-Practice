#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int tc;
	cin>>tc;
	for(int i=0;i<tc;i++){
	    int n,m;
        cin>>n>>m;
        int arr[n];
        for(int i=0;i<n;i++){
        cin>>arr[i];
        }
        sort(arr,arr+n);
        if(n!=m) {
            cout<<arr[n-m] - 1<<endl;
        }
        else{
        cout<<arr[0] - 1<<endl;
        }
	}
	return 0;
}
