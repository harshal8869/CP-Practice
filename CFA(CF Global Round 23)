#include<bits/stdc++.h>
using namespace std;
void maxima(){
   // void solve(){
    int n,m;
    int sum=0;
    int arr[n];
    cin>>n>>m;
    for(int i=1;i<=n;i++){
        cin>>arr[i];
        sum+=arr[i];
    }
    if(m==1){
        if(sum==n){
            cout<<"YES"<<endl;
            return;
        }
    }
    else{
        if(sum > 0){
            cout<<"YES"<<endl;
            return;
        }
    }
    cout<<"NO"<<endl;

}

int main(){
    int tc;
    cin>>tc;
    for(int i=0;i<tc;i++){
        maxima();
    
    }
    return 0;
}
