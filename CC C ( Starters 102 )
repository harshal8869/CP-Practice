#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int tc;
	cin>>tc;
	for(int i=0;i<tc;i++){
	    int n;
	    cin>>n;
	    int sum=0;
	    int arr[n];
	    for(int i=0;i<n;i++){
	        cin>>arr[i];
	        sum+=arr[i];
	    }
	    sort(arr,arr+n);
	   int ans = sum -arr[0];
	   cout<<ans<<endl;
	}
	return 0;
}
