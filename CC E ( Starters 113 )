#include<bits/stdc++.h>
using namespace std;
#define ll long long int
void thrill(){
      ll a,b;
      cin>>a>>b;
      b++;
      ll rem = (a%b!=0);
      ll q = a/b;
      ll num = q + rem;
    ll ans = max({1ll,a + 2 - 2 * b,num});
    cout<<ans<<endl;
}
int main(){
    int tc;
    cin>>tc;
    for(int i=0;i<tc;i++){
        thrill();
    }
}
