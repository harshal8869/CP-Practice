    int n;
    cin>>n;
   if(n==4){
        cout<<2<<" "<<1<<" "<<3<<" "<<4<<" "<<endl;
        return;
    }
    for(int i=0;i<n-5;i++)
    cout<<i+4<<" ";
        
     cout<<2<<" "<<3<<" "<<1<<" "<<n-1<<" "<<n<<" "<<endl;

        
        
    }
    int main(){
        int tc;
        cin>>tc;
        for(int i=0;i<tc;i++){
            permutation();
        }
    



	return 0;
}
