#include <bits/stdc++.h>
using namespace std;
#define ll long long int
void thrill(){
	    ll n;
	    cin>>n;
	    if(n<3){ 
	        cout<<0<<endl;
	        return;

	        
	    }
	    int d = n / 2;
	    int rem = n % 2;
cout<< n  + rem + d - 3<<endl;
}
int main(){
    int tc;
    cin>>tc;
    for(int i=0;i<tc;i++){
        thrill();
    }
    return 0;
}
