void thrill(){

ll n, k, x;
 cin >> n >> k >> x;
if (x != 1){
cout << "YES" << endl;
 cout << n << endl;
 for (int i = 1; i < n + 1; i++){
cout << 1 << " ";
 }
 cout<<endl;
 return;
 }
 if (n == 1 || k <= 1){
 cout << "NO" << endl;
 return;
 }
if (n % 2 == 0) {
 cout<<"YES"<<endl;
 cout<<n/2<<endl;
for (int i = 1; i <= n / 2; i++){
 cout<<2<<" ";
 }
cout<<endl;
return;

}
 if (k > 2){
 cout<<"YES"<<endl;
 cout << (n - 3) / 2 + 1<<endl;
 for (int i = 1; i <= (n - 3) / 2; i++){
  cout<<2<<" ";
}
cout<<3;
cout<<endl;
 return;

 }
cout<<"NO"<<endl;






}
int main(){
int tc;
 cin>>tc;
 for(int i=0;i<tc;i++){
      thrill();
      }

return 0;
}

    
    
