#include <bits/stdc++.h>
using namespace std;
#define ll long long int
int main() {
	// your code goes here
	int tc;
	cin>>tc;
	for(int i=0;i<tc;i++){
	    ll n;
    cin>>n; 
    ll cnt = 0;
  ll ans = 0;
  ll arr[n];
  for(int i=0;i<n;i++){
      cin>>arr[i];
  }
    for(int i=0;i<n;i++){
        cnt = cnt + arr[i];
        ans = ans + (cnt==(i+1));
    }
    cout<<ans<<endl;
	}
	return 0;
}
