#include<bits/stdc++.h>
using namespace std;
#define ll long long int
void thrill(){
    ll a,b,c;  cin>>a>>b>>c;  ll x = b;  ll y = a - b;
    x = x % c;  y = y % c; ll mini = min(x,y);
    ll ans = x + y - 2 * mini;
    cout<<ans<<endl;
    
}
int main(){
    int tc;
    cin>>tc;
    for(int i=0;i<tc;i++){
        thrill();
    }
    return 0;
}
