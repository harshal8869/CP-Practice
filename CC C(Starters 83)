#include<bits/stdc++.h>
using namespace std;

int main() {
    int tc;
    cin>>tc;
    for(int i=0;i<tc;i++){
        int n,a,b;
        cin>>n>>a>>b;
        int ans = 0;
        for(int i=1;i<n+1;i++) {
            if(i%2==1){
                ans = ans + b;
            } 
            else {
              ans = ans + a;
            }
        }
        cout<<ans<<endl;
    }
    return 0;
}
