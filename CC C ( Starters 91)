#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n;
	    cin>>n;
	    string s;
	    cin>>s;

        int x = 0;
        int y = 0;
        char c = 'A';

        for (int i=0;i<n;i++) {
            if (s[i] == c) {
                if (c== 'A') {
                    x++;
                } 
                else {
                    y++;
                }
            }
            else {
                
                c= (c == 'A') ? 'B' : 'A';
            }
        }

        cout<<x<<" "<<y<<" "<<endl;
    
	}
	return 0;
}
