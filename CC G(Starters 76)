#include <bits/stdc++.h> 
using namespace std; 
 void thrill() 
{ 
    int n; 
    cin>>n; 
 
    if(n%2==0) 
    { 
        cout<<0<<" "; 
        for (int i =1;i<n;i++) 
        { 
            if (i % 2==0){
                cout<<1<<" ";
            }
            else{ 
                cout<<-1<<" ";
            }
        } 
    } 
    else{
        cout<<-1<<" ";
    }
    cout << endl; 
} 
 
int main() 
{ 
    int tc;
    cin>>tc;
    for(int i=0;i<tc;i++){
        thrill(); 
} 
return 0;
}
