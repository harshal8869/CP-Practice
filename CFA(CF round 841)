#include<bits/stdc++.h>
using namespace std;
#define ll long long int
void thrill(){
    ll n;
    cin>>n;
    ll cnt = 1; 
    ll arr[n];
    for (int i=0;i<n;i++) 
    { 
        cin>>arr[i];
        cnt = cnt * arr[i];
    } 
    cnt = n + cnt -1;
    cout<<2022 * cnt<<endl;
     
    
}
int main(){
	int tc;
	cin>>tc;
	for(int i=0;i<tc;i++){
	    thrill();
	}
	  return 0;
}
