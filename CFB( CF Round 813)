#include<bits/stdc++.h>
using namespace std;
 
void permutation()
{
        int n;
        cin>>n;
        int arr[n];
        for(int i = 0 ; i < n ; i++){
            arr[i]=i+1;
        }
 for(int i =n-1;i>=1;i=i-2)
 {
  swap(arr[i-1],arr[i]);
 }
 for(int i=0;i<n;i++)
 {
  cout<<arr[i]<<" ";
 }
 cout<<endl;
}
 
    int main(){
        int tc;
        cin>>tc;
        for(int i=0;i<tc;i++){
            permutation();
        }
    
    return 0;
}
