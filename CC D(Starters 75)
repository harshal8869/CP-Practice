#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int tc;
	cin>>tc;
	for(int i=0;i<tc;i++){
	    int n;
	    cin>>n;
	    int cnt1=0;
	      string s;
	      cin>>s;
    for(int i=0;i<n;i++){
        if(s[i]=='1'){
            cnt1++;
        }
    }
     if(n==2){
        if(cnt1!=2){
            cout<<"no"<<endl;
            continue;
        }
        else{
            cout<<"yes"<<endl;
            continue;
        }
    }
    if(n==1){
        cout<<"NO"<<endl;
        continue;
    }
   
    if(cnt1>=4){
        cout<<"no"<<endl;
        continue;
    }
    cout<<"yes"<<endl;
}



	return 0;
}
