#include<bits/stdc++.h>
using namespace std;
int main(){
    int tc;
    cin>>tc;
    for(int i=0;i<tc;i++){
        int n,m;
        cin>>n>>m;
        int k=min(n,m);
        if(n==1 && m==1){
            cout<<0<<endl;
        }
        else{
            cout<<n+m+k-2<<endl;
        }
    }
    return 0;
}


